@model CameraRentalApp.Models.Camera

@{
    ViewData["Title"] = "Add Camera";
}

<form asp-action="Create" method="post">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label for="Brand">Brand</label>
                        <input asp-for="Brand" type="text" class="form-control" placeholder="Enter Brand" required />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Stock">Stock</label>
                        <input asp-for="Stock" type="number" class="form-control" placeholder="Enter Stock" required />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="RentalPricePerDay">Rental Price</label>
                        <input asp-for="RentalPricePerDay" type="number" class="form-control" placeholder="Enter Price" required />
                        <span asp-validation-for="RentalPricePerDay" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="imageFile">Upload Image</label>
                       <input asp-for="Image" type="file" class="form-control-file" id="imageFile" name="imageFile" placeholder="Enter Price" required />
                       <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
