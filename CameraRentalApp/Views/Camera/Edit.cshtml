@using CameraRentalApp.Models
@model CameraRentalApp.Models.Camera

@{
    ViewData["Title"] = "Edit Camera";
}



<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CameraId" />
    <input type="hidden" asp-for="Image" />
        
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>@ViewData["Title"]</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Brand" class="form-label">Brand</label>
                        <input asp-for="Brand" type="text" class="form-control" placeholder="Enter Brand" required />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Stock" class="form-label">Stock</label>
                        <input asp-for="Stock" type="number" class="form-control" placeholder="Enter Stock" required />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RentalPricePerDay" class="form-label">Rental Price</label>
                        <input asp-for="RentalPricePerDay" type="number" step="0.01" class="form-control" placeholder="Enter Price" required />
                        <span asp-validation-for="RentalPricePerDay" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                </div>

                <div class="card-footer text-right">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
