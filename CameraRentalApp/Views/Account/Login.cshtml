@model CameraRentalApp.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CameraRentalApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body style="background: linear-gradient(to right, #024CAA, #EC8305); height: 100vh; display: flex; justify-content: center; align-items: center; color: white;">

    <div class="login-container" style="background-color: rgba(0, 0, 0, 0.5); padding: 30px; border-radius: 10px; box-shadow: 0 0 15px rgba(0, 0, 0, 0.2); width: 100%; max-width: 400px;">
        <h4 class="text-center mb-4" style="color: white;">Login to CameraRentalApp</h4>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label" style="color: white;">Username</label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label" style="color: white;">Password</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn" style="background-color: #EC8305; color: white; width: 100%;">Login</button>
        </form>
        <div class="text-center mt-3">
            <a href="#" style="color: #EC8305;">Forgot Password?</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



